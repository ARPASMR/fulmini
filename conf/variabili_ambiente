export day_dir=$home_dir/archivio/day               # |        |----> day
export rec_dir=$home_dir/archivio/rec               # |        |----> rec 
export out_dir=$home_dir/archivio/out               # |        |----> out 
                                                    # |
export bin_dir=$home_dir/bin                        # |----> bin [scripts di tipo .sh]
export fun_dir=$home_dir/bin/functions              # |        |-----> functions [scripts non .sh, es: Metview, R, grads, ecc.]
                                                    # |
export conf_dir=$home_dir/conf                      # |----> conf [file di configurazione/variabili ambiente]
                                                    # |----> doc
export log_dir=$home_dir/log                        # |----> log
export tmp_dir=$home_dir/tmp                        # |----> tmp
